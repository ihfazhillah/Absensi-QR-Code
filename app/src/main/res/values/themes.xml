<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AbsensiQRCode" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#d84727</item>
        <item name="colorPrimaryVariant">#ef7b45</item>
        <item name="colorOnPrimary">#cdedf6</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#cdedf6</item>
        <item name="colorSecondaryVariant">#5eb1bf</item>
        <item name="colorOnSecondary">#042a2b</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AbsensiQRCode.H1">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:shadowColor">?colorPrimary</item>
        <item name="android:shadowRadius">0.5</item>
    </style>

    <style name="Theme.AbsensiQRCode.Description">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="Theme.AbsensiQRCode.Divider">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="Theme.AbsensiQRCode.MarginStartEnd">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>
</resources>